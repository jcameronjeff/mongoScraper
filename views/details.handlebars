<header>
  {{> _navbar}}
</header>

<section>




<div class="card wider mt-5 pt-5 pb-5 .z-depth-3">

    <!--Card image-->
    <div class="view overlay text-center stylish-color">
        <img src="{{article.link}}" class="mx-auto d-block img-fluid pt-5" style=" height: 80vh">



    </div>
    <!--/Card image-->

    <!--Card content-->
    <div class="card-body text-center">
        <!--Title-->
        <h4 class="card-title"><strong>{{article.style}}</strong></h4>

        <p class="card-text">{{article.link}}</p>

    <div class="row" style="border-top: 1px solid grey;" >
        <div class='col md-6'><h3>Add Note</h3><textarea placeholder="Type a note here" id="addNote"></textarea><button value="{{article.id}}" id="saveNote" class="btn-floating btn-lg purple-gradient" ><i class="fa fa-magic mr-1"></i></button></div>
        <div class='col md-6' id='dress-notes' style="border-left: 1px solid grey;"><h3>My notes</h3>
         {{#if article.note}}
            {{#each article.note}}
            
                <li>{{this.body}}</li>

           {{/each}}
        {{/if}}
        
        </div>
    </div>
       

    </div>
</div>

</section>
